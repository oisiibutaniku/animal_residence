<div class="contents row">
  <div class='pro'>
    <div class='userpage-img'>
    <% if current_user.image.present? %>
    <%= image_tag @user.image, class: "item-img"%>
    <% else %>
    <%= image_tag "dummy_user.jpeg", class: "item-img" %>
    <% end %>
    </div>
    <div class='userpage-text'>
        <div class='userpage-name'>
        <a><%= @user.nickname %></a>
        <div class='userpage-profile'>
        <%= @user.profile %>
        </div>
        <%= link_to 'プロフィールを編集', edit_user_path(@user.id),class:"pro_edit" %>
    </div>
  </div>
</div>
  <p><%= @user.nickname %>さんの投稿一覧</p>
  <% @animals.each do |animal| %>
    <%= render partial: "animals/animal", locals: { animal: animal } %> 
     <% end %>
</div>
